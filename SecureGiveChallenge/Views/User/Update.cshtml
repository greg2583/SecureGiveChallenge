@model User
@{
    ViewBag.Title = "Update";
}

<h2>Update User</h2>
<form method="post">
    <p>
        <label asp-for="FirstName">Your First Name:</label>
        <input asp-for="FirstName" />
        <br />
        <span asp-validation-for="FirstName"></span>
    </p>
    <p>
        <label asp-for="LastName">Your Last Name:</label>
        <input asp-for="LastName" />
        <br />
        <span asp-validation-for="LastName"></span>
    </p>    
    <p>
        <label asp-for="UserType">Choose User Type:</label>        
        <input type="radio" asp-for="UserType" value="E" /> Editor
        <input type="radio" asp-for="UserType" value="V" /> Viewer
        <br />
        <span asp-validation-for="UserType"></span>
    </p>
    <p><button type="submit">Submit</button></p>
</form>
